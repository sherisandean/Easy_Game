@model EasyGame.ViewModels.AddTransactionViewModel
@{
    ViewBag.Title = "Add Transaction";
}
<link href="~/Content/sitecss.css" rel="stylesheet" type="text/css" />


<h2>Add Transaction</h2>

@using (Html.BeginForm("AddTransaction", "Home", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ClientId)

    <div class="form-group">
        @Html.LabelFor(m => m.SelectedTransactionTypeId, "Transaction Type")
        @Html.DropDownListFor(m => m.SelectedTransactionTypeId, Model.TransactionTypes, "Select a transaction type", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Amount)
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Comment)
        @Html.TextAreaFor(m => m.Comment, new { @class = "form-control" })
    </div>

    <input type="submit" value="Add Transaction" class="btn btn-primary" />
}
